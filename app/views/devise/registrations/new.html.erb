<script>
  addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
</script>
<link rel="stylesheet" href="/assets/font-awesome.min2.css" />
<link href="/assets/style.css" rel='stylesheet' type='text/css' media="all">
<link href="/assets/fonts.googleapis.com/css?family=Barlow:300,400,500" rel="stylesheet">
<script src="/assets/Signup.js"></script>
<div style="background-image: url('/assets/bg-01.jpg');  background-size: cover; background-repeat: no-repeat; height:100%; " ;>
<h1 class="header-w3ls">
    Welcome</h1>
    <div class="art-bothside" >
      <div class="Up-sign-form text-center" >
        <h2> SIGN UP</h2>
      </div>
      <div class="mid-cls" >
        
            <div class="line-mid">
            
        </div>
      </div>  
    <div class="art-right-w3ls", style= "text-align:left">
        
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field form-left-w3l">
          <%= f.label "First Name" %><br />
          <%= f.text_field :fname, autofocus: true, autocomplete: "First name" %>
        </div>

        <div class="field form-left-w3l">
          <%= f.label :lname %><br />
          <%= f.text_field :lname, autofocus: true, autocomplete: "Last name" %>
        </div>

        <div class="field form-left-w3l">
          <%= f.label :age %><br />
          <%= f.number_field :age, autofocus: true, autocomplete: "Age" %>
        </div>
        
        <div class="field form-left-w3l">
          <%= f.label :email, :class=> "clear", :name=>"email", :placeholder=>"Email", :type=>"text" %><br />
          <%= f.email_field :email,  :style=> 'height: 35px', :autofocus=> "true", :autocomplete=> "email" %>
        </div>

        <div class="field form-right-w3ls">
          <%= f.label :password %>
          <div class="clear">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, :style=> 'height: 35px', :autocomplete=> "new-password" %>
          </div>
        </div>

        <div class="field form-right-w3ls ">
          <%= f.label :password_confirmation %><br />

          <%= f.password_field :password_confirmation, :style=> 'height: 35px', :autocomplete=> "new-password" %>
        </div>

        <div class="actions btnn">
          <%= f.submit "Sign up", :class=> "clear"%>
        </div> 
      <% end %>
    <div style="text-align:center"> <br />
     <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>


