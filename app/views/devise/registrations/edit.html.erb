<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
 <div class="field form-left-w3l">


  <div class="field form-group">
    <%= f.label "First Name" , :class=> "clear",:for=>"username" %><br />
      
    <%= f.text_field :fname,  :style=> 'height: 35px', autofocus: true,   :placeholder=>"Change Username", autocomplete: "First name"%> 
 
</div>

  <div class="field form-group">
    <%= f.label "Last Name",  :class=> "clear",  :for=>"firstName" %><br />
  
    <%= f.text_field :lname, :style=> 'height: 35px', autofocus: true, :placeholder=>"Change First name", autocomplete: "Last name" %>
  
</div>

  
    <%#= f.label "Enter age", :class=> "control-label col-sm-2",  :for=>"age"   %>
    <%#= f.number_field :age,  :class=>"form-control", autofocus: true, :placeholder=>"Enter age", autocomplete: "Age" %>
 

  <!-- <div class="field form-group"> -->
    <%#= f.label "Role", :class=> "control-label col-sm-2", :for=>"LastName" %><!-- <br /> -->
    <%#= f.text_field :role, :class=>"form-control", autofocus: true, :placeholder=>"Change Last name", autocomplete: "Role" %>
  <!-- </div> -->

  <div class="field form-group">
    <%= f.label "New email", :class=> "clear", :for=>"Email" %><br />
    <%= f.email_field :email,  :style=> 'height: 35px', autofocus: true, :placeholder=>"Change Email", autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password, :class=> "clear", :for=>"Password" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password,  :style=> 'height: 35px', :placeholder=>"New Password", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label "Password", :class=> "clear", :for=>"Password" %><br />
    <%= f.password_field :password_confirmation, :style=> 'height: 35px', :placeholder=>"Confirm Password", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password , :class=> "clear", :for=>"Password" %> <i>(we need your current password to confirm your changes)<br></i><br />
    <%= f.password_field :current_password, :style=> 'height: 35px', :placeholder=>"Earlier Password", autocomplete: "current-password" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Update" %>
  </div>




                     <div class="actions form-group">
                        <h5>Cancel Account?<br> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> <br></h5>
                     </div>
                 
     





<%= link_to "Back", root_path %>
</div>
</div>
</div>

    <% end %>



 